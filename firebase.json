{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "package.json",
      "package-lock.json",
      "server.js",
      "env",
      ".gitignore",
      "README.md"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "app"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "."
  }
}
